<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fm.user.dao.UserGetFileMapper">

    <sql id="Base_Columns_List">
        gfid,gfname , gfidea, gfloader,
         gfcompany, gfresult, gfclassifyname,gfaddress,gfdatetime,gfnumber
    </sql>

      <insert id="insertGetFile" parameterType="cn.fm.pojo.GetFile" >
          insert into getFile(gfname,gfclassifyid,gfclassifyname,gfaddress,gfdatetime,gfnumber) values(#{gfname},
          #{gfclassifyid} ,#{gfclassifyname},#{gfaddress},#{gfdatetime},#{gfnumber})
      </insert>

      <select id="selectClassify" parameterType="java.lang.Integer" resultType="cn.fm.pojo.Classify">
          select cyid,cyname,cyfather,cyaddress from classify;
      </select>

     <select id="selectGetFileByName" parameterType="java.lang.String" resultType="cn.fm.pojo.GetFile">
         select
         <include refid="Base_Columns_List" />
         from getFile where gfname like concat(concat('%',#{value}), '%') ;
     </select>

    <select id="selectGetFileByCompany" parameterType="java.lang.String" resultType="cn.fm.pojo.GetFile">
         select
         <include refid="Base_Columns_List"/>
         from getFile where gfcompany = #{value}
     </select>

    <select id="selectGetFileByClassifyId" parameterType="java.lang.String" resultType="cn.fm.pojo.GetFile">
        select
         <include refid="Base_Columns_List" />
        from getFile where gfclassifyid = #{value}
    </select>


    <select id="selectGetFileByDateTime" parameterType="java.lang.String" resultType="cn.fm.pojo.GetFile">
        select
        <include refid="Base_Columns_List" />
        from getFile where gfdatetime like concat(concat('%',#{value}), '%')
    </select>

    <select id="selectGetFileByNumber" parameterType="java.lang.Integer" resultType="cn.fm.pojo.GetFile">
        select
        <include refid="Base_Columns_List" />
        from getFile where gfnumber = #{value}
    </select>
   <!--

      加count(*) 显示查询结果的数量
  -->
    <select id="selectAllGetFile" resultType="cn.fm.pojo.GetFile">
         select
         <include refid="Base_Columns_List" />
        from getFile;
    </select>

    <!--更新 -->
    <update id="" parameterType="cn.fm.pojo.GetFile">
       update getFile SET
       <if test="gfname != null" >
           gfname = #{gfname} ,
       </if>
        <if test="gfidea != null" >
            gfidea = #{gfidea} ,
        </if>
        <if test="gfloader != null" >
            gfloader = #{gfloader},
        </if>
        <if test="gfcompany != null" >
            gfcompany = #{gfcompany},
        </if>
        <if test="gfresult != null" >
            gfresult = #{gfresult},
        </if>
        <if test="gfclassifyname != null" >
            gfclassifyname = #{gfclassifyname},
        </if>
        <if test="gfaddress != null" >
            gfaddress = #{gfaddress},
        </if>

        <if test="gfdatetime != null" >
            gfdatetime = #{gfdatetime},
        </if>
        <if test="gfnumber != 0" >
            gfnumber = #{gfnumber}
        </if>
       where gfid = #{gfid}
    </update>

    <delete id="deleteGetFileById" parameterType="int">
        delete from getFile where gfid = #{id}
    </delete>
</mapper>