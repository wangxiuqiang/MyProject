<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fm.user.dao.UserGetFileMapper">

    <sql id="Base_Columns_List">
        gfid,gfname , gfidea, gfloader,gfclassifyid
         ,gfcompany, gfresult, gfclassifyname,gfaddress,gfdatetime,gfnumber,type,isborrow
    </sql>

      <insert id="insertGetFile" parameterType="cn.fm.pojo.GetFile" >
          insert into getFile(gfname,gfclassifyid,gfclassifyname,gfaddress,gfdatetime,gfnumber,
          gfidea,gfresult,gfloader,gfcompany) values(#{gfname},
          #{gfclassifyid} ,#{gfclassifyname},#{gfaddress},#{gfdatetime},#{gfnumber},#{gfidea},
          #{gfresult}, #{gfloader},#{gfcompany})
      </insert>

      <select id="selectClassify" parameterType="java.lang.Integer" resultType="cn.fm.pojo.Classify">
          select cyid,cyname,cyfather,cyaddress from classify WHERE cyid = #{value}
      </select>

    <select id="selectGetFileById" parameterType="int" resultType="cn.fm.pojo.GetFile">
        select
        <include refid="Base_Columns_List" />
        from getFile where gfid = #{gfid}
    </select>

     <select id="selectGetFileByName" parameterType="java.lang.String" resultType="cn.fm.pojo.GetFile">
         select
         <include refid="Base_Columns_List" />
         from getFile where gfname like concat(concat('%',#{value}), '%')
     </select>

    <select id="selectGetFileByCompany" parameterType="java.lang.String" resultType="cn.fm.pojo.GetFile">
         select
         <include refid="Base_Columns_List"/>
         from getFile where gfcompany = #{value}
     </select>

    <select id="selectGetFileByClassifyId" parameterType="java.lang.Integer" resultType="cn.fm.pojo.GetFile">
        select
         <include refid="Base_Columns_List" />
        from getFile where gfclassifyid = #{value}
    </select>


    <select id="selectGetFileByDateTime" parameterType="java.lang.String" resultType="cn.fm.pojo.GetFile">
        select
        <include refid="Base_Columns_List" />
        from getFile where gfdatetime like concat(concat('%',#{value}), '%')
    </select>

    <select id="selectGetFileByNumber" parameterType="java.lang.Integer" resultType="cn.fm.pojo.GetFile">
        select
        <include refid="Base_Columns_List" />
        from getFile where gfnumber = #{value}
    </select>

    <!--多项查询-->
    <select id="selectGetFileByTwoAndMore" parameterType="cn.fm.pojo.GetFile" resultType="cn.fm.pojo.GetFile">
        select
        <include refid="Base_Columns_List" />
        from getFile
        <where>

            <if test="gfclassifyid != 0">
                 gfclassifyid = #{gfclassifyid}
            </if>
            <if test="gfnumber != 0">
                and gfnumber = #{gfnumber}
            </if>
            <if test="gfcompany != null">
                and gfcompany = #{gfcompany}
            </if>
            <if test="gfname != null">
                and gfname like concat(concat('%',#{gfname}), '%')
            </if>

            <if test="gfdatetime != null">
                and gfdatetime like concat(concat('%',#{gfdatetime}), '%')
            </if>
        </where>


    </select>
   <!--


  -->
    <select id="selectAllGetFile" resultType="cn.fm.pojo.GetFile">
         select
         <include refid="Base_Columns_List" />
        from getFile
    </select>

    <!--更新 -->
    <update id="updateGetFileById" parameterType="cn.fm.pojo.GetFile">
       update getFile
        <set>
       <if test="gfname != null" >
           gfname = #{gfname} ,
       </if>
        <if test="gfidea != null" >
            gfidea = #{gfidea} ,
        </if>
        <if test="gfloader != null" >
            gfloader = #{gfloader},
        </if>
        <if test="gfcompany != null" >
            gfcompany = #{gfcompany},
        </if>
        <if test="gfresult != null" >
            gfresult = #{gfresult},
        </if>
        <if test="gfclassifyid != 0">
            gfclassifyid = #{gfclassifyid},
        </if>
        <if test="gfclassifyname != null" >
            gfclassifyname = #{gfclassifyname},
        </if>
        <if test="gfaddress != null" >
            gfaddress = #{gfaddress},
        </if>

        <if test="gfdatetime != null" >
            gfdatetime = #{gfdatetime},
        </if>
        <if test="gfnumber != 0" >
            gfnumber = #{gfnumber},
        </if>
        <if test="isborrow != 0">
            isborrow = #{isborrow}
        </if>
        </set>
       where gfid = #{gfid}
    </update>

    <!--查询这个文件的借阅信息是不是存在-->
    <select id="selectGFhasBorrowInfo" parameterType="int" resultType="cn.fm.pojo.Borrow">
         select * from borrow_getFile where fileid=#{id}
    </select>
    <delete id="deleteGetFileById" parameterType="int">
        delete from getFile where gfid IN
        <foreach collection="gfid" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteGetFileBorrowInfo" parameterType="int">
        delete FROM borrow_getFile
        <where>
            fileid=#{gfid}
        </where>
    </delete>
</mapper>